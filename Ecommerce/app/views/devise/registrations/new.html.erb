<h2 class="text-center mb-4" style="color: #e9ecef;">Sign Up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signup' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(Minimum length: <%= @minimum_password_length %> characters)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="form-group text-center mt-3">
    <p class="text-white">Already have an account? <%= link_to 'Login', new_user_session_path, class: 'text-dark-brown' %></p>
  </div>
<% end %>
<!-- Add custom CSS for further adjustments -->
<style>
  body {
    background: url('<%= asset_path('clothing_store_design_2_.jpg') %>') no-repeat center center fixed;
    background-size: cover;
    color: #e9ecef; /* Light text color */
  }
  .form-signup {
    max-width: 400px; /* Restrict the form width */
    margin: 0 auto; /* Center align the form */
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow */
    background-color: rgba(53, 37, 26, 0.9); /* Dark brown background color with transparency */
  }
  .form-signup .form-label {
    font-weight: bold; /* Make labels bold */
    color: #e9ecef; /* Light color for labels */
  }
  .form-signup .form-control {
    border-radius: 5px; /* Rounded input fields */
    border: 1px solid #ced4da; /* Light border color */
    background-color: #495057; /* Dark background for input fields */
    color: #e9ecef; /* Light text color for input fields */
    box-shadow: none; /* Remove default shadow */
  }
  .form-signup .form-control:focus {
    border-color: #80bdff; /* Highlight border on focus */
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); /* Subtle shadow on focus */
  }
  .form-signup .form-text {
    margin-top: 5px; /* Add space above the help text */
    font-size: 0.875rem; /* Slightly smaller font size */
    color: #adb5bd; /* Muted text color for help text */
  }
  .form-signup .btn-primary {
    background-color: #8d6e63; /* Light dark brown color */
    border-color: #8d6e63; /* Match border color */
    border-radius: 5px; /* Rounded button corners */
  }
  .form-signup .btn-primary:hover {
    background-color: #6d4c41; /* Darker brown on hover */
    border-color: #6d4c41; /* Darker border color on hover */
  }
  .form-signup .text-white {
    color: #e9ecef !important; /* White color for the "Already have an account?" text */
  }
  .form-signup .text-dark-brown {
    color: #6d4c41; /* Dark brown color for the "Login" link */
  }
  .form-signup .text-dark-brown:hover {
    color: #8d6e63; /* Light brown on hover */
  }
</style>
